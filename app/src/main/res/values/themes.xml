<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WikiGames" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/DarkSkyBlue</item>
        <item name="colorPrimaryVariant">@color/CeruleanBlue</item>
        <item name="colorSecondary">@color/RoyalOrange</item>
        <item name="colorSecondaryVariant">@color/TigersEye</item>
        <item name="android:colorBackground">@color/BalticSea</item>
        <item name="colorSurface">@color/Tuna</item>
        <item name="colorOnBackground">@color/DarkGrayX11</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant</item>
